<div class="rooms_new_wallpaper">

<div class="rooms_new_container">
 <div>*以下全て必須項目です / 値段は数値で記入*</div>
 <%= form_with model: @room do |f| %>

       <div class="field">
            <%= f.label :room_name , "施設名" ,class: "label" %><br/>
            <%= f.text_field :room_name %>
       </div>
      
        <div class="field">
            <%= f.label :room_info , "施設情報" ,class: "label" %><br />
            <%= f.text_area :room_info , class: 'form-control', size: "148x8" %>
        </div>
      
        <div class="field">
            <%= f.label :room_price , "値段" ,class: "label" %><br />
            <%= f.text_field :room_price %>
        </div>

        <div class="field">
            <%= f.label :room_address , "住所" ,class: "label" %><br />
            <%= f.text_field :room_address %>
        </div>

        <div class="field">
            <%= f.label :room_image , "施設画像" ,class: "label" %><br />
            <%= f.file_field :room_image %>
        </div>
      
        <div class="actions">
            <%= f.submit "保存" %>
        </div>

 <% end %>
        <div class="cansel">
            <%= link_to '戻る', :back , class: "back_button"%>
        </div>
</div>

</div>