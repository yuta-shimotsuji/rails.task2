<div>html</div>

<%  @rooms.each_slice(3) do |room1,room2,room3| %>

    <div class="index_date_container">

        <% if room1 != nil %>
            <div class="index_date">

                <%= room1.id %>
                <%= room1.room_name%>

            </div>
        <% end %>


        <% if room2 != nil %>
            <div class="index_date">

                <%= room2.id %>
                <%= room2.room_name%>

            </div>
        <% end %>


        <% if room3 != nil %>
            <div class="index_date">

                <%= room3.id %>
                <%= room3.room_name%>

            </div>
        <% end %>

    </div>


<% end %>